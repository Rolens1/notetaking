<!-- views/notes/edit.ejs -->
<form action="/notes/<%= note._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    
    <div class="form-group">
        <label>Titre</label>
        <input type="text" name="title" value="<%= note.title %>" class="form-control">
    </div>

    <div class="form-group">
        <label>Contenu</label>
        <textarea name="content" class="form-control"><%= note.content %></textarea>
    </div>

    <div class="form-group">
        <label>Catégorie</label>
        <select name="category" class="form-control">
            <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <%= note.category === cat ? 'selected' : '' %>>
                    <%= cat %>
                </option>
            <% }); %>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Mettre à jour</button>
</form>